@model IEnumerable<ProjetCsharpExamMbathio.Models.Entities.Paiement>

<h1>Payments</h1>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>Montant</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var paiement in Model)
        {
            <tr>
                <td>@paiement.Id</td>
                <td>@paiement.DatePaiement.ToShortDateString()</td>
                <td>@paiement.Montant</td>
                <td>@paiement.Type</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@paiement.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@paiement.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Create New Payment</a>
