@model IEnumerable<ProjetCsharpExamMbathio.Models.Entities.Produit>

<h1>Produits</h1>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Libelle</th>
            <th>Quantite En Stock</th>
            <th>Prix Unitaire</th>
            <th>Quantite Seuil</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produit in Model)
        {
            <tr>
                <td>@produit.Id</td>
                <td>@produit.Libelle</td>
                <td>@produit.QuantiteEnStock</td>
                <td>@produit.PrixUnitaire</td>
                <td>@produit.QuantiteSeuil</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@produit.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@produit.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Create New Produit</a>
